/* pages/goods/detail1/index.wxss */
.swiper-box {
    width: 100%;
    height: 240px;
}

.swiper-box .slide-image {
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}

.shopping-container {
    padding: 0 30rpx;
}

.shopping-container .name {
    margin: 10px 0;
    font-weight: bold;
    color: #333;
}

.shopping-container .price {
    margin: 10px 0;
    font-weight: normal;
    color: orangered;
}

.shopping-container .remark {
    margin: 10px 0;
    color: #939393;
    line-height: 22px;
}

.swiper-container {
    margin: 0 auto;
    position: relative;
    overflow: hidden;
}

.swiper-pager {
    position: absolute;
    right: 20px;
    bottom: 20px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0,0,0,.3);
    color: #fff;
    font-family: Arial, Helvetica, sans-serif;
    text-align: center;
    line-height: 40px;
    font-size: 12px;
}

.presale-info {
  color:#fff;
  background-color:#f44;
  border-radius:0;
  margin-bottom:0;
  border:none;
  height:50px;
  padding:0 30rpx;
}

.presale-info_price {
  font-size: 24px;
  line-height:50px;
}

.presale-info_deadline {
  font-size: 10px;
  text-align: right;
  line-height:20px;
  margin: 4px 0;
}

.presale-info_time {
  font-size: 12px;
}
.weui-cell::before, .weui-cell::after,
.weui-cells::before, .weui-cells::after {
  border-top: 1rpx solid #FFF;
  border-bottom: 1rpx solid #FFF;
}

.popup-example--bottom .zan-popup__container {
  left: 0;
  right: 0;
}

.zan-btns button {
  border-radius:0;
}

.twui-btn-disable {
  color:#ebebeb!important;
  background:#ffa6a6!important;
  border-color:#e5e5e5!important;
  cursor:not-allowed!important;
  opacity:1!important;

  

}