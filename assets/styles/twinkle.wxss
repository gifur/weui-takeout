.twui-btn-fixed {
  	position: fixed;
	 bottom: 0;
	 left: 0;
    display: block;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding-left: 14px;
    padding-right: 14px;
    box-sizing: border-box;
    font-size: 18px;
    text-align: center;
    text-decoration: none;
    color:#fff;
    background-color:#f44;
    line-height: 2.55555556;
